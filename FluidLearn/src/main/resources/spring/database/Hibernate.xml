<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
	<!-- Hibernate session factory -->
    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
    	<property name="dataSource">
    		<ref bean="dataSource"/>
    	</property>
    	<property name="hibernateProperties">
    		<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.DerbyDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">create-drop</prop>
    		</props>
    	</property>
    	
		<property name="annotatedClasses">
			<list>
				<value>org.fluidlearn.core.model.Azione</value>
				<value>org.fluidlearn.core.model.Contributo</value>
				<value>org.fluidlearn.core.model.Corso</value>
				<value>org.fluidlearn.core.model.Date</value>
				<value>org.fluidlearn.core.model.Prototipo</value>
				<value>org.fluidlearn.core.model.Risorsa</value>
				<value>org.fluidlearn.core.model.Person</value>
				<value>org.fluidlearn.core.model.Plugin</value>
				<value>org.fluidlearn.core.model.Post</value>
				<value>org.fluidlearn.core.model.User</value>
				<value>org.fluidlearn.core.model.attori.Utente</value>
				<value>org.fluidlearn.core.model.attori.Partecipante</value>
				<value>org.fluidlearn.core.model.attori.Ruolo</value>
				<value>org.fluidlearn.core.model.compito.Risposta</value>
				<value>org.fluidlearn.core.model.compito.Sollecitazione</value>
				<value>org.fluidlearn.core.model.compito.Valutazione</value>
				<value>org.fluidlearn.core.model.corpo.Artefatto</value>
				<value>org.fluidlearn.core.model.corpo.Corpo</value>
				<value>org.fluidlearn.core.model.corpo.Plugin</value>
				<value>org.fluidlearn.core.model.corpo.Testo</value>
				<value>org.fluidlearn.core.model.unitadidattica.Mappa</value>
				<value>org.fluidlearn.core.model.unitadidattica.Nodo</value>
				<value>org.fluidlearn.core.model.unitadidattica.Relazione</value>
				<value>org.fluidlearn.core.model.unitadidattica.UnitaDA</value>				
			</list>
		</property>
    </bean>

</beans>  